<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>
{{# each products}}
<div class="row" style="padding-bottom:25px">
  <div class="card-deck">
    {{# each this}}
    <div class="card col-sm-4" style="width: 20rem;">
      <img class="card-img-top" src="{{this.imagePath}}" style="margin-top:5px;height:200px;" alt="Card image cap">
      <div class="card-body">
        <h4 class="card-title">{{this.title}}</h4>
        <p class="card-text">{{this.description}}</p>
        <div class="clearfix">
          <div class="price float-left">{{this.price}}</div>
          <a href="/add-to-cart/{{this._id}}" class="btn btn-success float-right" role="button">Add to shopping cart</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
    {{/each}}

