{{# if products}}
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group">
            {{# each products}}
            <li class="list-group-item">
                <span class="badge" style="background-color: darkgray;color: white;float:right">{{this.qty}}</span>
                <strong>{{this.item.title}}</strong>
                <span class="badge badge-success">${{this.price}}</span>
                <div class="dropdown btn-group">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" style="height: 20px;text-align: center;line-height: 6px;">
                        <span class="caret"></span>  Action
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">Reduce by 1</a>
                        <a class="dropdown-item" href="#">Remove All</a>
                    </div>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <strong>Total:{{totalPrice}}</strong>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
    </div>
</div>
{{else}}
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2>No Items in Cart</h2>
    </div>
</div>
{{/if}}